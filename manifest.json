{
  "manifest_version": 3,
  "name": "Mod randomizer",
  "description": "Automatically identifies mods, and enables only one of them while disabling all other mods" ,
  "version": "2.1",
  "permissions": [
    "management",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/icon_32.png",
      "64": "icons/icon_64.png",
      "128": "icons/icon_128.png",
      "18": "icons/icon_18.png"
    }
  },
  "icons": {
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "18": "icons/icon_18.png"
  }
}