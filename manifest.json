{
  "manifest_version": 3,
  "name": "Mod randomizer",
  "description": "Randomly enables a mod and disables other mods. Can automatically identify mods." ,
  "version": "2.3",
  "permissions": [
    "management",
    "storage" 
  ],

"host_permissions": [
    "https://api.gx.me/store/mods/update"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/icon_32.png",
      "64": "icons/icon_64.png",
      "128": "icons/icon_128.png",
      "18": "icons/icon_18.png"
    }
  },
  "icons": {
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "18": "icons/icon_18.png"
  }
}