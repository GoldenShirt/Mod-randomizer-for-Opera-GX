{
  "manifest_version": 3,
  "name": "Mod Randomizer",
  "description": "Randomly enables a mod and disables other mods. Can automatically identify mods.",
  "version": "6.0",
  "permissions": [
    "management",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.gx.me/store/mods/update",
    "https://raw.githubusercontent.com/GoldenShirt/Mod-randomizer-for-Opera-GX/main/url-catalog.json"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "18": "icons/icon_18.png",
      "32": "icons/icon_32.png",
      "64": "icons/icon_64.png",
      "128": "icons/icon_128.png"
    }
  },
  "icons": {
    "18": "icons/icon_18.png",
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png"
  }
}